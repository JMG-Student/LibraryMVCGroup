@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<h1>Search by Author</h1>
<a asp-controller="Books" asp-action="Create" class="btn btn-primary">
    List Available Books
</a>

<table>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Title
                </td>
                <td width="30%">
                    @obj.Author
                </td>
                <td width="50%">
                    @obj.Title
                </td>
                <td width="30%">
                    @obj.LibraryID
                </td>


            </tr>
        }
    </tbody>
</table>
