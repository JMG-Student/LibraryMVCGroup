@model IEnumerable<Library>


<h1> Total Books by Library</h1>
<a asp-controller="Library" asp-action="Create" class="btn btn-primary">
   Create a Library
</a>

<table>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.ContactNumber
                </td>

                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Library" asp-action="CountMembersPerLibrary" asp-route-id="@obj.Id">Total Members Per Library</a>
                    </div>
                </td>


            </tr>
        }
    </tbody>
</table>